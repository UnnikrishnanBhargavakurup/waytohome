  <head>
    <% include partials/head %>
  </head>
  <body>
  <% include partials/navigation %>
  <div id="fh5co-page">
    <header>
      <% include partials/header %>
    </header>
    <div id="fh5co-contact-section">
      <div class="container">
        <div class="row">
          <div class="col-md-8 col-md-offset-2 text-center heading-section animate-box">
            <h2>Contact Us</h2>
            <!-- <h3>Separated they live in Bookmarksgrove right at the coast of the Semantics, a large language ocean.</h3> -->
          </div>
        </div>
        <div class="row">
          <div class="col-md-4 col-md-push-8 animate-box">
            <h3>Our Address</h3>
            <ul class="contact-info">
              <li><i class="icon-location-pin"></i>BizIntelligence Technologies Pvt. Ltd. 'Jyothis', AN-D25, Archana Nagar, Pongummoodu, Medical College P.O., Thiruvananthapuram - 695011, India</li>
              <li><i class="icon-phone2"></i>+ 1235 2355 98</li>
              <li><i class="icon-mail"></i><a href="#">info@waytohome.org</a></li>
              <li><i class="icon-globe2"></i><a href="#">www.waytohome.org</a></li>
            </ul>
          </div>
          <div class="col-md-8 col-md-pull-4 animate-box">
            <%if (locals.status) { %>
            <%if (status == 'failed') { %>
            <div class="alert alert-danger">
              <p>Error occured, message not sent.</p>
            </div>
            <% } else { %>
            <div class="alert alert-success">
              <p>Message sent! Thank you.</p>
            </div>
            <% } %>
            <% } %>
            <form id="contactud_form" action="/contact.html" method="post" novalidate>
            <div class="row">
              <div class="col-md-6">
                <div class="form-group">
                  <input type="text" name="body" id="body">
                  <input name="name" type="text" class="form-control" placeholder="Name" required>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-group">
                  <input name="email" type="text" class="form-control" placeholder="Email" data-fv-emailaddress-message="The value is not a valid email address" required>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <textarea required name="message" class="form-control" id="" cols="30" rows="7" placeholder="Message"></textarea>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <input type="submit" value="Send Message" class="btn btn-primary">
                </div>
              </div>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!-- End: fh5co-contact-section -->
    <div id="map" class="fh5co-map animate-box"></div>
      <!-- END map -->
    <footer>
    <% include partials/footer %>
    </footer>
  </div>
  

  <!-- jQuery -->
  <script src="js/jquery.min.js"></script>
  <!-- jQuery Easing -->
  <script src="js/jquery.easing.1.3.js"></script>
  <!-- Bootstrap -->
  <script src="js/bootstrap.min.js"></script>
  <!-- Waypoints -->
  <script src="js/jquery.waypoints.min.js"></script>
  <!-- Google Map -->
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCirgWt1KKaW1psU2MQ2IsQ1JUBW_Y63Hw&sensor=false"></script>
  <script src="js/google_map.js"></script>

  <!-- Main JS (Do not remove) -->
  <script src="js/main.js"></script>
  <script type="text/javascript">
    (function() {
      "use strict";
      window.addEventListener("load", function() {
        document.getElementById("body").remove();
        var form = document.getElementById("contactud_form");
        form.addEventListener("submit", function(event) {
          if (form.checkValidity() == false) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add("was-validated");
        }, false);
      }, false);
      $(document).ready(function() {
        $(':input, textarea').on('change keyup', function(){
          $('.alert').hide('slow');
        });
      });
    }());
  </script>
  </body>
</html>